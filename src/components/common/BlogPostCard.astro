---
import '../../styles/post-card.scss'

// utils
import { simplifyDate } from "../../utils"

const { title, description, pubDate, image, url } = Astro.props

const pubDate_ = simplifyDate(pubDate)
---

<li class="post-card">
    <a href={`/blog/${url}/`}>
        {image && (
            <div class="post-card__thumbnail-container">
                <img src={image} alt={title} />
            </div>
        )}

        <div class="post-card__body">
            <h2 class="title">{title}</h2>
            <span class="date">{pubDate_.simplifiedDate}</span>
            <p class="body-text">
                {description}
            </p>
        </div>
    </a>
</li>