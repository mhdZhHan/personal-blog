---
import {
	Maximize2,
	Pause,
	PictureInPicture2,
	Play,
	Settings,
} from "lucide-astro"
---

<div class="controls-right">
	<span class="icon">
		<button class="auto-play-toggle">
			<span class="toggle-slide">
				<Pause size={14} class="pause-icon" />
				<Play size={14} class="play-icon" />
			</span>
		</button>
	</span>

	<span class="icon">
		<button class="settings-btn">
			<Settings size={22} />
		</button>
	</span>

	<span class="icon picture">
		<button class="picture-in-picture">
			<PictureInPicture2 size={24} />
		</button>
	</span>

	<span class="icon">
		<button class="full-screen">
			<Maximize2 size={22} />
		</button>
	</span>
</div>

<style lang="scss">
	svg,
	button {
		user-select: none;
		-webkit-user-select: none;
		cursor: pointer;
		color: #fff;
	}

	.hidden {
		display: none;
	}

	button {
		border: 0;
		outline: 0;
		background: inherit;
		width: 100%;
		height: 100%;
		appearance: none;
		display: flex;
		align-items: center;
		justify-content: center;
	}

	.controls-right {
		display: flex;
		justify-content: center;
		align-items: center;

		.icon {
			display: inline-flex;
			justify-content: center;
			align-items: center;
			text-align: center;

			margin-left: 8px;
			margin-right: 5px;

			@media (max-width: 400px) {
				margin-left: 5px;
				margin-right: 5px;
				font-size: 24px;
			}

			&.picture {
				@media (max-width: 400px) {
					display: none;
				}
			}
		}

		// auto-play toggle button
		.auto-play-toggle {
			width: 30px;
			height: 10px;
			border-radius: 20px;
			position: relative;
			margin-right: 8px !important;
			background: #b6b6b6;
			.toggle-slide {
				position: absolute;
				left: -5px;
				top: 50%;
				transform: translateY(-50%);
				width: 17px;
				height: 17px;
				background: #727272;
				border-radius: 50%;
				display: flex;
				justify-content: center;
				align-items: center;
				cursor: pointer;
				// js is better
				.play-icon {
					display: none;
				}
				&.active {
					left: 15px;
					.play-icon {
						display: inline-block;
					}
					.pause-icon {
						display: none;
					}
				}
			}
		}

		.settings-btn {
			transition: 0.3s;
			& .active {
				transform: rotate(45deg);
			}
		}
	}
</style>
