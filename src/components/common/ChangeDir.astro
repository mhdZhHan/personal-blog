---
import { ChevronRight } from "lucide-astro"
---

<div class="cd">
	<div class="wrapper">
		<button
			id="changeDir"
			class="change-directory"
			aria-label="Go back to previous page"
			onclick="window.history.back()"
		>
			<ChevronRight size="16" class="shrink-0" />
			<span>cd ..</span>
		</button>
	</div>
</div>

<style lang="scss">
	.cd {
		.wrapper {
			padding: 0 0.75rem;
		}
	}
	#changeDir {
		display: flex;
		align-items: center;
		gap: 0.25rem;

		background: transparent;
		cursor: pointer;
		transition: all 0.2s ease;
		span {
			display: block;
			letter-spacing: 2px;
			transition: all 0.2s ease;
			position: relative;

			&::before {
				content: "";
				position: absolute;
				bottom: 0;
				left: 0;
				width: 100%;
				height: 1px;
				opacity: 0;
				background-color: var(--primary);
				transition: all 0.3s ease;
			}

			&:hover::before {
				opacity: 1;
			}
		}

		&:hover {
			color: var(--primary);
		}
	}
</style>
