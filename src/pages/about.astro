<style lang="scss">
    .about-head {
        width: 100%;
        text-align: center;
        margin-bottom: 1.5rem;
        .about-head__title {
            font-size: 1.875rem;
            line-height: 2.25rem;
            font-weight: 700;
            color: var(--title-text);
        }
    }

    .about-container {
        h3 {
            margin-top: .75rem;
            margin-bottom: 1.7rem;
            // font-size: 1.5rem;
            color: var(--title-text);
        }

        p {
            margin-bottom: 1.5rem;
            // font-size: 1.25rem;
        }
    }

    .contact-container {
        margin-top: 2rem;
        .contact-container__title {
            // font-size: 1.5rem;
            line-height: 2.25rem;
            font-weight: 700;
            color: var(--title-text);
            margin-bottom: 2rem;
        }
        .input-container {
            width: 25rem;

            @media all and (max-width: 480px) {
                width: 100%;
            }

            label {
                display: block;
                font-weight: 500;
                font-size: 100%;
                margin-bottom: .8rem;
                // font-size: 1.25rem;
            }


            input, textarea{
                outline: none;
                width: 100%;
                font-size: 100%;
                border: 2px solid var(--border-color);
                background: var(--secondary);
                padding: 1rem 1.5rem;
                font-weight: 500;
                border-radius: 0.5rem;
                margin-bottom: .8rem;
                // font-size: 1.25rem;
                font-family: inherit;
                &:focus {
                    border-color: var(--primary);
                }
                &::placeholder {
                    color: var(--gray);
                }
            }
        }

        button {
            outline: none;
            border: none;
            border-radius: 0.75rem;
            background: var(--secondary);
            border: 2px solid var(--border-color);
            font-weight: 700;
            color: var(--text-color);
            // font-size: 1.25rem;

            padding-top: 0.75rem;
            padding-bottom: 0.75rem;
            padding-left: 2rem;
            padding-right: 2rem;

            width: fit-content;
            cursor: pointer;

            transition: all 0.2s ease-in;

            &:hover {
                border-color: var(--primary);
                color: var(--primary);
            }
        }
    }
</style>