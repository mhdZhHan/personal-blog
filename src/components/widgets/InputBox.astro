---
import type { HTMLAttributes } from "astro/types";
import type { LucideIconComponent } from "../../types/LucideIcon.type";

interface Props extends HTMLAttributes<"input"> {
  Icon?: LucideIconComponent;
}

const { Icon, ...props } = Astro.props;
---

<div class="input-container">
  <input {...props} class="input-box" />

  {Icon ? <Icon size={17} class="input-icon" /> : ""}
</div>

<style lang="scss">
  .input-container {
    width: 100%;
    margin-bottom: 1rem;
    position: relative;
    .input-box {
      width: 100%;
      border-radius: 0.375rem;
      border: 1px solid var(--border-color);
      background-color: transparent;
      padding: 0.8rem 1rem 0.8rem 3rem;
    }
    .input-icon {
      position: absolute;
      left: 1rem;
      top: 50%;
      transform: translate(0, -50%) rotate(0) skew(0) skewY(0) scaleX(1)
        scaleY(1);
    }
    .password-icon {
      right: 1rem;
      left: auto;
      cursor: pointer;
    }
  }
</style>
