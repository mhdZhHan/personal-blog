---
import { PackageOpen } from "lucide-astro"
---

<div {...Astro.props} data-clipboard-wrapper class="breezeWindow">
	<div class="breezeWindow__header">
		<span class="icon"><PackageOpen size="19" /></span>
		<span class="title"><slot name="title" /></span>
		<div class="window-button">
			<img
				class="minimize"
				src="/icons/window_minimize.svg"
				alt="minimize"
			/>
			<img
				class="maximize"
				src="/icons/window_maximize.svg"
				alt="maximize"
			/>
			<img class="close" src="/icons/window_close.svg" alt="close" />
		</div>
	</div>

	<div data-clipboard-content class="breezeWindow__body">
		<slot />
	</div>
</div>

<style lang="scss">
	.breezeWindow {
		position: relative;
		border-radius: 2px;
		border: 1px solid var(--border-color);
		margin: 1.25em 0;
		@media all and (max-width: 768px) {
			margin: 1rem 0;
		}
		.breezeWindow__header {
			border-bottom: 1px solid var(--border-color);
			color: var(--text);

			padding: 10px;
			height: 30px;
			border-top-right-radius: 2px;
			border-top-left-radius: 2px;

			display: flex;
			align-items: center;
			justify-content: center;
			justify-content: space-between;
			.icon {
				cursor: pointer;
				svg {
					color: var(--primary);
				}
			}
			.title {
				color: var(--title);
			}
			.window-button {
				display: flex;
				align-items: center;
				gap: 0.25rem;
			}
			img {
				width: 22px;
				height: 22px;
				border-width: 0;
				margin: 0;
				pointer-events: none;
				user-select: none;
				&.minimize {
					width: 16px;
					height: 16px;
					filter: invert(var(--dl-invert));
				}
				&.maximize {
					width: 16px;
					height: 16px;
					filter: invert(var(--dl-invert));
				}
				&.close {
					right: 4px;
				}
			}
		}

		.breezeWindow__body {
			overflow: auto;
			padding: 1rem;
			font-size: 1rem;
			line-height: 2;

			font-family: inherit;

			&.hide {
				display: none;
			}
		}
	}
</style>

<script>
	const closeBtn = document.querySelector("#close")
	const minimizeBtn = document.querySelector("#minimize")
	const maximizeBtn = document.querySelector("#maximize")
	const windowBody = document.querySelector("#breezeWindow__body")

	closeBtn?.addEventListener("click", () => {
		windowBody?.classList.toggle("hide")
	})
</script>
